<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/primary_dark_main</item>
        <item name="colorAccent">@color/switch_sign</item>
        <item name="colorControlNormal">@color/switch_sign</item>
        <item name="colorControlActivated">@color/switch_sign</item>
        <item name="colorControlHighlight">@color/switch_sign</item>
    </style>
    <style name="Toolbar.TitleText.Sign" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#757575</item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Spinner.DropDown">
    </style>
    <style name="AppTheme.Signin.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@color/primary_sign</item>
        <item name="colorControlActivated">@color/primary_sign</item>
        <item name="colorControlHighlight">@color/accent_sign</item>
        <item name="android:colorMultiSelectHighlight">@color/accent_sign</item>
        <item name="colorAccent">@color/accent_sign</item>
        <item name="android:windowBackground">@color/trans</item>
    </style>
</resources>